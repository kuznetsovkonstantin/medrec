{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/Calendar/clndr.css') }}" rel="stylesheet">
{% endblock %}

{% block nav %}
    <ol class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li><a href="{{ path('toRecEm') }}">Запись на прием</a></li>
        <li class="active">Итог</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row top20">
        <div class="col-xs-12 col-sm-8 col-md-6">
            <h4>Уважаемый-(ая) {{ rec.client.name }}</h4>
            <p>Вы записаны на прием к специалисту <b>{{ rec.spec.name }}</b> <br>
            Вам необходимо явиться на прием <b>{{ rec.date|date('d.m.Y') }} в {{ rec.time|date('H:i') }}</b> по адресу</p>
        </div>
    </div>

{% endblock %}