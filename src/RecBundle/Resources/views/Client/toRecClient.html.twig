{% extends '@RecBundle/Calendar/toRec.html.twig' %}

{% block selList %}
    <div class="col-xs-12">
        <h3>Контактная информация</h3>

            <div id="formBack" class="col-xs-12">
                <div class="col-lg-7 col-md-10 col-sm-12">

                    <div class="col-xs-12">
                        <div class="errForm bg-danger">
                            {{ form_errors(clientForm) }}
                            {{ form_errors(clientForm.name) }}
                            {{ form_errors(clientForm.phone) }}
                        </div>
                    </div>

                    <div class="col-xs-12">
                        {% for message in app.flashes('errors') %}
                            <p class="flashSucess bg-danger">{{ message }}</p>
                        {% endfor %}
                    </div>

                    {{ form_start(clientForm) }}

                    <div class="col-xs-12 col-sm-5 form-group">
                        {{ form_label(clientForm.name,'Ваше имя') }}
                        {{ form_widget(clientForm.name, { 'attr': {'class':'form-control'} }) }}
                    </div>

                    <div class="col-xs-12 col-sm-3 form-group">
                        {{ form_label(clientForm.phone,'Ваш номер телефона') }}
                        {{ form_widget(clientForm.phone, { 'attr': {'class':'form-control phoneNumber'} }) }}
                    </div>

                    <div class="col-xs-12 form-group">
                        {{ form_widget(clientForm.save, {'label': 'Записаться', 'attr': {'class':'btn btn-primary'} }) }}
                    </div>

                    {{ form_end(clientForm) }}
                </div>

            </div>

    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}